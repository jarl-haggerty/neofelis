<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.curious</groupId>
  <artifactId>neofelis</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Neofelis Genome Annotator</name>
  <url>http://maven.apache.org</url>
  <packaging>clojure</packaging>
  <build>
    <plugins>
      <plugin>
        <groupId>org.curious</groupId>
        <artifactId>hiss</artifactId>
        <version>1.0.0</version>
        <extensions>true</extensions>
        <configuration>
          <pythonMain>org.curious.neofelis.main</pythonMain>
          <pythonPath>/home/jarl/jython/Lib</pythonPath>
          <pythonArgs>
            <param>--heuristically</param>
            <param>--genemark=/home/jarl/genemark</param>
            <param>--blast=/home/jarl/blast</param>
            <param>--eValue=0.1</param>
            <param>Phi-4-1.fas</param>
          </pythonArgs>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.python</groupId>
      <artifactId>jython</artifactId>
      <version>2.5.0</version>
    </dependency>
  </dependencies>
</project>
